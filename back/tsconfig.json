{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": false,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "experimentalDecorators": true
  },
  "typeRoots": [
    "node_modules/@types"
  ],
  "exclude": [
    "logs",
    "node_modules"
  ]
}